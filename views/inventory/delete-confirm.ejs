<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
<%  }) %>
   </ul>
<% } %>
<div class="addInvent">
    <p id="deleteconfirm">Confirm Deletion - The delete is permanent.</p>

    <form class="addVeh" action="/inv/delete-invt" id="deleteForm" method="POST">
        <div class="input-field">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" required readonly<% if(locals.inv_make) { %> value="<%= locals.inv_make %>"<% } %>>

        </div>
        <div class="input-field">
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" required readonly<% if(locals.inv_model) { %> value="<%= locals.inv_model %>"<% } %>>
        </div>
        <div class="input-field">
            <label for="inv_price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" required readonly<% if(locals.inv_price) { %> value="<%= locals.inv_price %>"<% } %>>
        </div>
        <div class="input-field">
            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" required readonly<% if(locals.inv_year) { %> value="<%= locals.inv_year %>"<% } %>>
        </div>
        <div>
            <button class="addvehicle" type="submit">
                DELETE VEHICLE
            </button>
            <div>
                <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                    <% } %>>
            </div>
        </div>
    </form>
</div>