<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
} %>


<div class="logn">
    <form class="userLogin" action="/account/login" method="post">
        <div class="input-field">
            <label for="account_email">Email Address:</label>
            <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
            <!--<i class='bx bxs-user'></i>-->
        </div>
        <div class="input-field">
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" 
            required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <!--<i class="bx bxs-lock-alt"></i> -->
        </div>
        <div class="log">
            <button class="button" type="submit">Login</button>
        </div>
        <p class="registerAcc">
            No Account? <a href="/account/register">Sign-Up</a>
        </p>
    </form>
</div>